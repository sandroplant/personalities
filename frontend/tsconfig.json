{
  "compilerOptions": {
    "target": "ES6",
    "lib": ["DOM", "DOM.Iterable", "ES6"],
    "allowJs": true,
    "skipLibCheck": true,
    "esModuleInterop": true,
    "allowSyntheticDefaultImports": true,
    "strict": true,
    "forceConsistentCasingInFileNames": true,
    "module": "ESNext",
    "moduleResolution": "node",
    "jsx": "react-jsx",
    "baseUrl": "./src",
    "paths": {
      "@components/*": ["components/*"],
      "@services/*": ["services/*"],
      "@hooks/*": ["hooks/*"],
      "@typeDefs/*": ["types/*"],
      "@utils/*": ["utils/*"],
      "@config/*": ["config/*"]
    },
    "outDir": "./build",
    "types": ["jest", "node", "@testing-library/jest-dom"],
    "resolveJsonModule": true,
    "isolatedModules": true,
    "noEmit": false
  },
  "include": [
    "src",
    "src/**/*.tsx",
    "src/types/**/*.ts",
    "src/config/**/*.ts"
  ],
  "exclude": [
    "node_modules",
    "dist",
    "build",
    "webpack.config.js",
    "jest.config.ts",
    "src/types/reportWebVitals.d.ts"
  ]
}
