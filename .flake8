[flake8]
# keep this aligned with Black
max-line-length = 120
extend-ignore = E203, W503

# ignore non-source / vendored / generated / sample dirs
exclude =
    .git,
    __pycache__,
    .mypy_cache,
    .pytest_cache,
    .venv,
    */.venv/*,
    backend/.venv,
    backend/.venv/*,
    venv,
    env,
    node_modules,
    frontend/node_modules,
    frontend/node_modules/*,
    build,
    dist,
    repo,
    repo/*,
    tools,
    tools/*,
    backend/**/migrations/*,
    **/migrations/*
