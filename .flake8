[flake8]
max-line-length = 120
exclude =
    .git,
    __pycache__,
    .venv,
    venv,
    **/.venv/**,
    **/venv/**,
    dist,
    build,
    db-data,
    backend/**/migrations/**,
    **/site-packages/**,
    **/_vendor/**,
    frontend/**,
    frontend/node_modules/**,
    node_modules/**
ignore = E203,W503
